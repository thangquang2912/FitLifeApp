<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:text="Profile"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/black"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivAvatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="24dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background"
            app:shapeAppearanceOverlay="@style/CircleImageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Alex Johnson"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivAvatar"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fitness Enthusiast"
            android:textColor="@color/text_grey"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvName" />

        <LinearLayout
            android:id="@+id/layoutStats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            android:weightSum="3"
            app:layout_constraintTop_toBottomOf="@+id/tvSubtitle"
            tools:layout_editor_absoluteX="16dp">

            <include
                android:id="@+id/cardHeight"
                layout="@layout/item_profile_stat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1" />

            <include
                android:id="@+id/cardWeight"
                layout="@layout/item_profile_stat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1" />

            <include
                android:id="@+id/cardAge"
                layout="@layout/item_profile_stat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvMetricsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"
            android:text="Health Metrics"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutStats"
            android:textColor="@color/black" />

        <LinearLayout
            android:id="@+id/layoutMetrics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintTop_toBottomOf="@+id/tvMetricsTitle">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="@color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/icon_bmi"
                        android:layout_marginBottom="8dp"/>
                    <TextView
                        android:text="BMI"
                        android:textSize="12sp"
                        android:textColor="@color/text_grey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tvBMI"
                        android:text="23.5"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black" />
                    <TextView
                        android:id="@+id/bmiCategory"
                        android:text="Normal"
                        android:textSize="14sp"
                        android:textColor="#4CAF50"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="@color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/icon_bmr"
                        android:layout_marginBottom="8dp"/>
                    <TextView
                        android:text="BMR"
                        android:textSize="12sp"
                        android:textColor="@color/text_grey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tvBMR"
                        android:text="1,650"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black" />
                    <TextView
                        android:id="@+id/bmrCategory"
                        android:text="kcal/day"
                        android:textSize="14sp"
                        android:textColor="@color/text_grey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Biểu đồ nước uống trong tuần -->
        <TextView
            android:id="@+id/tvWeeklyWaterTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"
            android:text="Weekly Water Intake"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutMetrics"
            android:textColor="@color/black" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardWaterChart"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="@color/white"
            app:strokeWidth="0dp"
            app:cardElevation="2dp"
            app:layout_constraintTop_toBottomOf="@+id/tvWeeklyWaterTitle">

            <com.example.fitlifesmarthealthlifestyleapp.ui.profile.WaterWeeklyChartView
                android:id="@+id/waterWeeklyChart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Biểu đồ số bước chân trong tuần -->
        <TextView
            android:id="@+id/tvWeeklyStepsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"
            android:text="Weekly Steps History"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardWaterChart"
            android:textColor="@color/black" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardStepsChart"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="@color/white"
            app:strokeWidth="0dp"
            app:cardElevation="2dp"
            app:layout_constraintTop_toBottomOf="@+id/tvWeeklyStepsTitle">

            <com.example.fitlifesmarthealthlifestyleapp.ui.profile.StepsWeeklyLineChartView
                android:id="@+id/stepsWeeklyChart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/cardStepsChart"
            app:strokeWidth="0dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="8dp">

                <TextView
                    android:id="@+id/btnEditProfile"
                    android:text="Edit Profile"
                    android:drawableEnd="@drawable/ic_arrow_right"
                    style="@style/ProfileMenuItem"/>

                <View style="@style/Divider"/>

                <TextView
                    android:id="@+id/btnWorkoutPrograms"
                    android:text="Workout Programs"
                    android:drawableStart="@drawable/icon_workout"
                    android:drawableEnd="@drawable/ic_arrow_right"
                    style="@style/ProfileMenuItem"/>

                <View style="@style/Divider"/>

                <TextView
                    android:id="@+id/btnLeaderboardChallenges"
                    android:text="Leaderboard - Challenges"
                    android:drawableStart="@drawable/icon_leaderboard"
                    android:drawableEnd="@drawable/ic_arrow_right"
                    style="@style/ProfileMenuItem"/>

                <View style="@style/Divider"/>

                <TextView
                    android:id="@+id/btnWorkoutHistory"
                    android:text="Workout History"
                    android:drawableStart="@drawable/icon_history"
                    android:drawableEnd="@drawable/ic_arrow_right"
                    style="@style/ProfileMenuItem"/>

                <View style="@style/Divider"/>

                <TextView
                    android:id="@+id/btnLogout"
                    android:text="Logout"
                    android:drawableStart="@drawable/icon_logout"
                    android:drawableEnd="@drawable/ic_arrow_right"
                    style="@style/ProfileMenuItem"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
