<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FitLifeSmartHealthLifestyleApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/orange_primary</item>
        <item name="colorPrimaryVariant">@color/orange_primary</item>
        <item name="colorSecondary">@color/orange_primary</item>
    </style>

    <style name="Theme.FitLifeSmartHealthLifestyleApp" parent="Base.Theme.FitLifeSmartHealthLifestyleApp" />

    <style name="OrangeInputTheme" parent="ThemeOverlay.MaterialComponents.TextInputEditText">
        <item name="colorPrimary">@color/orange_primary</item>
        <item name="android:textColorHighlight">#33FF6B00</item>
    </style>

    <style name="InputTheme" parent="ThemeOverlay.MaterialComponents.TextInputEditText">
        <item name="colorPrimary">@color/gray_text</item>
        <item name="android:textColorHighlight">@color/black</item>
    </style>

    <style name="ProfileMenuItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:background">?attr/selectableItemBackground</item> </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#F0F0F0</item>
        <item name="android:layout_marginHorizontal">16dp</item>
    </style>

    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ThemeOverlay.App.DatePicker" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/orange_primary</item>
        <item name="colorPrimaryVariant">@color/orange_primary</item>
        <item name="materialCalendarStyle">@style/Custom_MaterialCalendar</item>
    </style>

    <style name="Custom_MaterialCalendar" parent="Widget.MaterialComponents.MaterialCalendar">
        <item name="daySelectedStyle">@style/Custom_DaySelected</item>
    </style>

    <style name="Custom_DaySelected" parent="Widget.MaterialComponents.MaterialCalendar.Day.Selected">
        <item name="android:textColor">#FFFFFF</item> <item name="itemFillColor">@color/orange_primary</item>
    </style>
</resources>